.post-container {
  flex-direction: column;
  display: flex;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  /* border-top: 1px solid #ededed; */
  padding-bottom: 10rpx;
}

.post-author-date {
  display: flex;
  margin: 10rpx 10rpx, 20rpx 10rpx;
  flex-direction: row;
  align-items: center;
}

.post-author-date image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
}

.post-author-date text {
  margin-left: 20rpx;
}

.post-title {
  margin-top: 10rpx;
  font-size: 16px;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  margin-left: 10rpx;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 15rpx;
}

.post-content {
  color: #666;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 10rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like {
  margin-top: 20rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
  line-height: 16px;
}

.post-like image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
}

.post-like text {
  margin-left: 20rpx;
  color: #666;
  font-size: 32rpx;
}
