/* pages/post-detail/pots-detail.wxss */

.detail-container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.post-detail-title {
  font-size: 40rpx;
  margin: 30rpx;
  letter-spacing: 2rpx;
  color: #4b556c;
}

.author-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-right: 30rpx;
}

.author-name {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.content {
  margin: 40rpx 22rpx 0;
  color: #666;
  line-height: 44rpx;
  font-size: 15px;
}

.post-like {
  margin-top: 20rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
  line-height: 16px;
}

.post-like image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 30rpx;
}

.post-like text {
  margin-left: 20rpx;
  color: #666;
  font-size: 32rpx;
}
.post-detail-like{
  display: flex;
  flex-direction: row;
  align-items: center;
}
